<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
        http://www.springframework.org/schema/beans classpath:org/springframework/beans/factory/xml/spring-beans-4.1.xsd">

  <!-- bean id="UpdatesSpoutFactory" class="com.jpmc.cib.csw.adp.update.topology.spout.kafka.KafkaUpdatesSpoutFactory">
    <constructor-arg value="localhost:2181" />
    <constructor-arg value="test" />
  </bean-->
  
  <bean id="UpdatesSpoutFactory" class="ar.com.carloscurotto.storm.complex.topology.spout.fixed.FixedUpdatesSpoutFactory" />

  <bean id="ExternalUpdatePropagatorExecutor" class="ar.com.carloscurotto.storm.complex.topology.propagator.executor.ExternalUpdatePropagatorExecutor">
    <constructor-arg>
      <bean id="ExternalUpdatePropagatorProvider" class="ar.com.carloscurotto.storm.complex.topology.propagator.provider.UpdatePropagatorProvider">
        <constructor-arg>
          <map>
            <entry key="SEMS" value-ref="PrintExternalUpdatePropagator"></entry>
          </map>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg ref="UpdateRouteProvider" />
  </bean>

  <bean id="InternalUpdatePropagatorExecutor" class="ar.com.carloscurotto.storm.complex.topology.propagator.executor.InternalUpdatePropagatorExecutor">
    <constructor-arg>
      <bean id="InternalUpdatePropagatorProvider" class="ar.com.carloscurotto.storm.complex.topology.propagator.provider.UpdatePropagatorProvider">
        <constructor-arg>
          <map>
            <entry key="SEMS" value-ref="PrintInternalUpdatePropagator"></entry>
            <entry key="ANOTHER" value-ref="PrintInternalUpdatePropagator"></entry>
          </map>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>

  <bean id="ResultUpdatePropagatorExecutor" class="ar.com.carloscurotto.storm.complex.topology.propagator.executor.ResultUpdatePropagatorExecutor" />

  <bean id="PrintExternalUpdatePropagator" class="ar.com.carloscurotto.storm.complex.topology.propagator.print.PrintExternalUpdatePropagator" />
  
  <bean id="PrintInternalUpdatePropagator" class="ar.com.carloscurotto.storm.complex.topology.propagator.print.PrintInternalUpdatePropagator" />
  
  <bean id="UpdateRouteProvider" class="ar.com.carloscurotto.storm.complex.topology.route.provider.UpdateRouteProvider">
    <constructor-arg>
      <map value-type="ar.com.carloscurotto.storm.complex.topology.route.UpdateRoute">
        <entry key="SEMS" value="EXTERNAL_INTERNAL"></entry>
        <entry key="ANOTHER" value="INTERNAL_ONLY"></entry>
      </map>
    </constructor-arg>
  </bean>

</beans>